# name: test/sql/databricks/basic.test
# description: test
# group: [databricks]

# Require statement will ensure this test is run with this extension loaded
require parquet

require uc_catalog

require delta

require httpfs

require-env DATABRICKS_TOKEN

require-env DATABRICKS_ENDPOINT

require-env DATABRICKS_REGION

statement ok
CREATE SECRET (
    TYPE UC,
    TOKEN '${DATABRICKS_TOKEN}',
    ENDPOINT '${DATABRICKS_ENDPOINT}',
    AWS_REGION '${DATABRICKS_REGION}'
);

# Attach to databricks through the unity catalog API
statement ok
ATTACH 'duckdb_test_4' (TYPE UC_CATALOG, DEFAULT_SCHEMA 'test_schema');

# Can query a table
query I nosort expected_res
from duckdb_test_4.test_schema.test_table;

statement ok
use duckdb_test_4

query I nosort expected_res
from test_table;

statement ok
use memory

statement ok
DETACH duckdb_test_4

# Without a default schema is also possible

statement ok
ATTACH 'duckdb_test_4' (TYPE UC_CATALOG);

# Can query a table
query I nosort expected_res
from duckdb_test_4.test_schema.test_table;

